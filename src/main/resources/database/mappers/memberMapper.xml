<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.arc.s3.member.MemberDAO">
    
    
    
    <insert id="memberJoin" parameterType="com.arc.s3.member.MemberDTO" >
    
    insert into member values (#{id},#{pw},#{name},#{phone},#{email})
    
    </insert>
    
 	 <select id="memberLogin" parameterType="com.arc.s3.member.MemberDTO" resultType="com.arc.s3.member.MemberDTO" >
 	 
 	 select * from member where id=#{id} and pw=#{pw}
 	 
 	 </select>
    
     
     
      <update id="memberUpdate" parameterType="com.arc.s3.member.MemberDTO">
      
      update member set name =#{name}, phone=#{phone} where id=#{id}
      
      </update>
    
    
    <!--  
  <delete id=""></delete>
     -->
    
    
    
    
    
    
    
    
    </mapper>



	
